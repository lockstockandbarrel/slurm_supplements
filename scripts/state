#!/bin/bash
# REBOOT_ISSUED POWERING_UP REBOOT_REQUESTED PLANNED POWERED_DOWN CLOUD
# ALLOC COMP FUTR MIX RESV UNK
for NAME in ALLOCATED COMPLETING DOWN DRAINING DRAINED FAIL FUTURE IDLE MAINT MIXED NO_RESPOND NPC PERFCTRS POWER_DOWN POWERING_DOWN RESERVED UNKNOWN
do
   echo "$NAME $(sinfo --states=$NAME --format %N|xargs)"
done|column -t
exit
